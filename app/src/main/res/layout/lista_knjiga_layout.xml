<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eNaslovna"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eNaziv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"
                    android:textSize="17dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/eDatumObjavljivanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datum objavljivanja:"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/eBrojStranica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/eOpis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="17dp"/>

            <Button
                android:id="@+id/dPreporuci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preporuci"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>